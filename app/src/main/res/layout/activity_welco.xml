<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.aman.Welco">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/prname"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="8dp"
            android:drawableLeft="@mipmap/account"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="text"
            android:paddingLeft="0dp"
            android:textColorHint="#999"
            tools:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/pusernames"
            android:layout_width="368dp"
            android:layout_height="wrap_content"

            android:layout_alignLeft="@+id/prname"

            android:layout_alignStart="@+id/prname"
            android:layout_below="@+id/prname"
            android:layout_marginTop="15dp"
            android:drawableLeft="@mipmap/account"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="User Name"

            android:inputType="text"
            android:paddingLeft="0dp"
            android:textColorHint="#999"
            tools:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/pemail"
            android:layout_width="368dp"
            android:layout_height="42dp"
            android:layout_alignParentEnd="true"

            android:layout_alignParentRight="true"
            android:layout_below="@+id/pusernames"
            android:layout_marginTop="16dp"
            android:drawableLeft="@mipmap/account"
            android:drawablePadding="5dp"
            android:ems="10"

            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="0dp"
            android:textColorHint="#999"
            tools:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/ppassword2"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/pmobile"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:drawableLeft="@mipmap/lock"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Password"

            android:inputType="textPassword"
            android:paddingLeft="0dp"
            android:textColorHint="#999"
            tools:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/pConpassword1"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pmobile"
            android:layout_alignLeft="@+id/pmobile"
            android:layout_alignStart="@+id/pmobile"
            android:layout_marginBottom="42dp"
            android:drawableLeft="@mipmap/lock"
            android:drawablePadding="5dp"
            android:ems="10"

            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingLeft="0dp"
            android:textColorHint="#999"
            tools:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/pmobile"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/pSign"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/pSign"
            android:layout_marginBottom="28dp"
            android:drawableLeft="@mipmap/lock"
            android:drawablePadding="5dp"
            android:ems="10"

            android:hint="Mobile"
            android:inputType="number"
            android:paddingLeft="0dp"
            android:textColorHint="#999"
            tools:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/pSign"
            android:layout_width="371dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/pmobile"

            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="72dp"
            android:background="@drawable/selector_xml_btn_yellow"
            android:text="Submit" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
